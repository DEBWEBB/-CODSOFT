    <title>Basic Calculator</title>
    <style>
        body {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: 0;
    background-color: #f0f0f0;
}

.calculator {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-gap: 10px;
    max-width: 300px;
    padding: 20px;
    background-color: #333;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    overflow: hidden;
    animation: fadeIn 0.5s ease-in-out;
}

.display {
    grid-column: span 4;
    text-align: right;
    padding: 10px;
    background-color: #444;
    font-size: 36px;
    color: #fff;
}

button {
    padding: 15px;
    font-size: 24px;
    background-color: #555;
    color: #fff;
    border: none;
    cursor: pointer;
    transition: background-color 0.3s ease-in-out;
}

button:hover {
    background-color: #777;
}

button:active {
    background-color: #333;
    transform: scale(0.95);
}

